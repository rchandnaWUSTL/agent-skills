{
  "$schema": "https://raw.githubusercontent.com/aws/amazon-q-developer-cli/refs/heads/main/schemas/agent-v1.json",
  "name": "terraform-action-agent",
  "description": "Specialized agent for developing Terraform AWS Provider actions. Expert in Terraform Plugin Framework, AWS SDK v2, and provider patterns.",
  "prompt": "file://terraform-action-agent.md",
  "mcpServers": {},
  "tools": [
    "fs_read",
    "fs_write", 
    "execute_bash",
    "use_aws"
  ],
  "toolAliases": {},
  "allowedTools": [
    "fs_read",
    "fs_write",
    "execute_bash", 
    "use_aws"
  ],
  "resources": [
    "file://terraform-action-agent.md",
    "file://internal/service/**/*_action.go",
    "file://internal/service/**/*_action_test.go"
  ],
  "hooks": {},
  "toolsSettings": {
    "fs_read": {
      "allowedPaths": [
        ".kiro/**",
        "internal/service/**",
        "website/docs/**",
        "*.md"
      ]
    },
    "fs_write": {
      "allowedPaths": [
        "internal/service/**",
        "website/docs/**"
      ]
    },
    "execute_bash": {
      "allowedCommands": [
        "go fmt .*",
        "go test .*",
        "make .*",
        "golangci-lint .*"
      ],
      "autoAllowReadonly": true
    },
    "use_aws": {
      "autoAllowReadonly": true
    }
  },
  "useLegacyMcpJson": true,
  "model": null
}
